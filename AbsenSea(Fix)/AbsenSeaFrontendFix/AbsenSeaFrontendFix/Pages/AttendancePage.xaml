<Page x:Class="AbsenSeaFrontendFix.Pages.AttendancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AbsenSeaFrontendFix.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="AttendancePage">

    <Page.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E7EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F9FAFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="30,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Attendance Check" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock Text="Verify crew equipment and record attendance" FontSize="14" Foreground="#6B7280" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ“Š Dashboard" Style="{StaticResource NavButton}" Click="NavigateToDashboard_Click"/>
                    <Button Content="âœ“ Attendance" Style="{StaticResource PrimaryButton}"/>
                    <Button Content="ðŸ“‹ Reports" Style="{StaticResource NavButton}" Click="NavigateToReports_Click"/>
                    <Button Content="âš™ Settings" Style="{StaticResource NavButton}"/>
                    <Button Content="Logout" Style="{StaticResource NavButton}" Click="Logout_Click" Margin="15,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Camera and Input -->
            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                <!-- Crew ID Input -->
                <Border Background="White" CornerRadius="12" Padding="24" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Step 1: Enter Crew ID" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,15"/>
                        <TextBlock Text="Crew ID Number" FontSize="13" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="CrewIdTextBox" 
                                     Grid.Column="0"
                                     Style="{StaticResource ModernTextBox}"
                                     FontSize="16"
                                     Margin="0,0,10,0"
                                     TextChanged="CrewIdTextBox_TextChanged"/>
                            <Button Grid.Column="1"
                                    Content="Verify ID"
                                    Background="#10B981"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="30,10"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="VerifyId_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#059669"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        
                        <!-- Crew Info Display -->
                        <Border x:Name="CrewInfoPanel" 
                                Background="#F3F4F6" 
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="0,15,0,0"
                                Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" 
                                        Background="#2563EB" 
                                        Width="50" 
                                        Height="50" 
                                        CornerRadius="25"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="ðŸ‘¤" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1">
                                    <TextBlock x:Name="CrewNameText" Text="John Smith" FontSize="16" FontWeight="Bold" Foreground="#111827"/>
                                    <TextBlock x:Name="CrewPositionText" Text="Engineer â€¢ Deck A" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Camera Feed -->
                <Border Background="White" CornerRadius="12" Padding="24">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Step 2: Equipment Detection" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,15"/>
                        
                        <!-- Camera Preview -->
                        <Border Background="#1F2937" 
                                CornerRadius="8" 
                                Height="380"
                                BorderBrush="#374151"
                                BorderThickness="2">
                            <Grid>
                                <!-- Placeholder for camera feed -->
                                <Viewbox>
                                    <TextBlock Text="ðŸ“¹" FontSize="80" Foreground="#4B5563" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Viewbox>
                                <TextBlock Text="Camera Feed" 
                                           FontSize="20" 
                                           Foreground="#9CA3AF" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           Margin="0,80,0,0"/>
                                
                                <!-- Detection Overlay -->
                                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20">
                                    <Border Background="#1F2937" 
                                            CornerRadius="6" 
                                            Padding="12,8"
                                            Opacity="0.9">
                                        <StackPanel>
                                            <TextBlock Text="ðŸŽ¥ Camera Active" FontSize="12" Foreground="#10B981" FontWeight="SemiBold"/>
                                            <TextBlock Text="AI Detection: Ready" FontSize="11" Foreground="#9CA3AF" Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Status Indicator -->
                                <Border x:Name="DetectionStatus"
                                        Background="#10B981" 
                                        CornerRadius="6" 
                                        Padding="15,10"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right"
                                        Margin="20"
                                        Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock x:Name="DetectionStatusText" Text="âœ“ Equipment Detected" FontSize="13" Foreground="White" FontWeight="Bold"/>
                                        <TextBlock x:Name="DetectionDetailsText" Text="Helmet âœ“ â€¢ Vest âœ“" FontSize="11" Foreground="White" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Control Buttons -->
                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0"
                                    Content="Start Camera"
                                    Background="#2563EB"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="0,15"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Margin="0,0,10,0"
                                    Click="StartCamera_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Grid.Column="1"
                                    x:Name="CaptureButton"
                                    Content="Capture &amp; Analyze"
                                    Background="#10B981"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Padding="0,15"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Margin="10,0,0,0"
                                    Click="CaptureAnalyze_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Panel - Status and History -->
            <StackPanel Grid.Column="1">
                <!-- Today's Summary -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Today's Summary" FontSize="16" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Total Check-ins" FontSize="13" Foreground="#6B7280"/>
                            <TextBlock Text="128" FontSize="18" FontWeight="Bold" Foreground="#111827" HorizontalAlignment="Right"/>
                        </Grid>

                        <Border Background="#E5E7EB" Height="1" Margin="0,0,0,12"/>

                        <Grid Margin="0,0,0,12">
                            <TextBlock Text="Compliant" FontSize="13" Foreground="#10B981"/>
                            <TextBlock Text="115" FontSize="18" FontWeight="Bold" Foreground="#10B981" HorizontalAlignment="Right"/>
                        </Grid>

                        <Border Background="#E5E7EB" Height="1" Margin="0,0,0,12"/>

                        <Grid>
                            <TextBlock Text="Non-Compliant" FontSize="13" Foreground="#EF4444"/>
                            <TextBlock Text="13" FontSize="18" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Recent Check-ins -->
                <Border Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Recent Check-ins" FontSize="16" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,15"/>
                        
                        <!-- Check-in Item 1 -->
                        <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,12" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#D1FAE5" Width="35" Height="35" CornerRadius="17.5" Margin="0,0,10,0">
                                    <TextBlock Text="âœ“" FontSize="16" Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Mike Davis" FontSize="13" FontWeight="SemiBold" Foreground="#111827"/>
                                    <TextBlock Text="15 min ago" FontSize="11" Foreground="#9CA3AF"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Check-in Item 2 -->
                        <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,12" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FEE2E2" Width="35" Height="35" CornerRadius="17.5" Margin="0,0,10,0">
                                    <TextBlock Text="âš " FontSize="16" Foreground="#EF4444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Sarah Johnson" FontSize="13" FontWeight="SemiBold" Foreground="#111827"/>
                                    <TextBlock Text="22 min ago â€¢ No vest" FontSize="11" Foreground="#EF4444"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Check-in Item 3 -->
                        <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,12" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#D1FAE5" Width="35" Height="35" CornerRadius="17.5" Margin="0,0,10,0">
                                    <TextBlock Text="âœ“" FontSize="16" Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Emily Chen" FontSize="13" FontWeight="SemiBold" Foreground="#111827"/>
                                    <TextBlock Text="28 min ago" FontSize="11" Foreground="#9CA3AF"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Check-in Item 4 -->
                        <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,12" Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#D1FAE5" Width="35" Height="35" CornerRadius="17.5" Margin="0,0,10,0">
                                    <TextBlock Text="âœ“" FontSize="16" Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Robert Lee" FontSize="13" FontWeight="SemiBold" Foreground="#111827"/>
                                    <TextBlock Text="35 min ago" FontSize="11" Foreground="#9CA3AF"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Check-in Item 5 -->
                        <Border Padding="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FEE2E2" Width="35" Height="35" CornerRadius="17.5" Margin="0,0,10,0">
                                    <TextBlock Text="âš " FontSize="16" Foreground="#EF4444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="David Brown" FontSize="13" FontWeight="SemiBold" Foreground="#111827"/>
                                    <TextBlock Text="41 min ago â€¢ No helmet" FontSize="11" Foreground="#EF4444"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
