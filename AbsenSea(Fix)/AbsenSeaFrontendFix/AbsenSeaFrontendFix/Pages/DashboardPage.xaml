<Page x:Class="AbsenSeaFrontendFix.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AbsenSeaFrontendFix.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="DashboardPage">

    <Page.Resources>
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E7EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="#F9FAFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="30,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title and Ship Info -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock Text="Ship: MV Ocean Voyager â€¢ ID: SHP-001" FontSize="14" Foreground="#6B7280" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ“Š Dashboard" Style="{StaticResource PrimaryButton}"/>
                    <Button Content="âœ“ Attendance" Style="{StaticResource NavButton}" Click="NavigateToAttendance_Click"/>
                    <Button Content="ðŸ“‹ Reports" Style="{StaticResource NavButton}" Click="NavigateToReports_Click"/>
                    <Button Content="âš™ Settings" Style="{StaticResource NavButton}"/>
                    <Button Content="Logout" Style="{StaticResource NavButton}" Click="Logout_Click" Margin="15,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Statistics Cards Row 1 -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Crew Card -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="Total Crew Members" FontSize="14" Foreground="#6B7280" FontWeight="Medium"/>
                                <Border Background="#DBEAFE" CornerRadius="8" Padding="8" HorizontalAlignment="Right">
                                    <TextBlock Text="ðŸ‘¥" FontSize="20"/>
                                </Border>
                            </Grid>
                            <TextBlock Text="142" FontSize="36" FontWeight="Bold" Foreground="#111827" Margin="0,15,0,5"/>
                            <TextBlock Foreground="#10B981" FontSize="12" FontWeight="SemiBold">
                                <Run Text="â†‘ 12% "/><Run Text="from last month" Foreground="#6B7280"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Checked In Today Card -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="Checked In Today" FontSize="14" Foreground="#6B7280" FontWeight="Medium"/>
                                <Border Background="#D1FAE5" CornerRadius="8" Padding="8" HorizontalAlignment="Right">
                                    <TextBlock Text="âœ“" FontSize="20" Foreground="#10B981"/>
                                </Border>
                            </Grid>
                            <TextBlock Text="128" FontSize="36" FontWeight="Bold" Foreground="#111827" Margin="0,15,0,5"/>
                            <TextBlock Foreground="#6B7280" FontSize="12" FontWeight="SemiBold">
                                <Run Text="90.1% "/><Run Text="attendance rate"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Compliant Card -->
                    <Border Grid.Column="2" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="Full Compliance" FontSize="14" Foreground="#6B7280" FontWeight="Medium"/>
                                <Border Background="#FEF3C7" CornerRadius="8" Padding="8" HorizontalAlignment="Right">
                                    <TextBlock Text="ðŸ›¡ï¸" FontSize="20"/>
                                </Border>
                            </Grid>
                            <TextBlock Text="115" FontSize="36" FontWeight="Bold" Foreground="#111827" Margin="0,15,0,5"/>
                            <TextBlock Foreground="#10B981" FontSize="12" FontWeight="SemiBold">
                                <Run Text="89.8% "/><Run Text="with full equipment" Foreground="#6B7280"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Non-Compliant Card -->
                    <Border Grid.Column="3" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="Non-Compliant" FontSize="14" Foreground="#6B7280" FontWeight="Medium"/>
                                <Border Background="#FEE2E2" CornerRadius="8" Padding="8" HorizontalAlignment="Right">
                                    <TextBlock Text="âš ï¸" FontSize="20"/>
                                </Border>
                            </Grid>
                            <TextBlock Text="13" FontSize="36" FontWeight="Bold" Foreground="#EF4444" Margin="0,15,0,5"/>
                            <TextBlock Foreground="#EF4444" FontSize="12" FontWeight="SemiBold">
                                <Run Text="10.2% "/><Run Text="missing equipment" Foreground="#6B7280"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Charts and Recent Activity Row -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Attendance Trend Chart -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="Attendance Trend (Last 7 Days)" FontSize="18" FontWeight="Bold" Foreground="#111827"/>
                                <ComboBox HorizontalAlignment="Right" Width="120" SelectedIndex="0">
                                    <ComboBoxItem Content="Last 7 Days"/>
                                    <ComboBoxItem Content="Last 30 Days"/>
                                    <ComboBoxItem Content="Last 3 Months"/>
                                </ComboBox>
                            </Grid>
                            
                            <!-- Simple Bar Chart Visualization -->
                            <Grid Height="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Day 1 -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Bottom" Margin="5">
                                    <Border Background="#3B82F6" Height="120" CornerRadius="4,4,0,0" ToolTip="Monday: 120"/>
                                    <TextBlock Text="Mon" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="11" Foreground="#6B7280"/>
                                </StackPanel>

                                <!-- Day 2 -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="5">
                                    <Border Background="#3B82F6" Height="135" CornerRadius="4,4,0,0" ToolTip="Tuesday: 135"/>
                                    <TextBlock Text="Tue" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="11" Foreground="#6B7280"/>
                                </StackPanel>

                                <!-- Day 3 -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="5">
                                    <Border Background="#3B82F6" Height="128" CornerRadius="4,4,0,0" ToolTip="Wednesday: 128"/>
                                    <TextBlock Text="Wed" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="11" Foreground="#6B7280"/>
                                </StackPanel>

                                <!-- Day 4 -->
                                <StackPanel Grid.Column="3" VerticalAlignment="Bottom" Margin="5">
                                    <Border Background="#3B82F6" Height="140" CornerRadius="4,4,0,0" ToolTip="Thursday: 140"/>
                                    <TextBlock Text="Thu" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="11" Foreground="#6B7280"/>
                                </StackPanel>

                                <!-- Day 5 -->
                                <StackPanel Grid.Column="4" VerticalAlignment="Bottom" Margin="5">
                                    <Border Background="#3B82F6" Height="132" CornerRadius="4,4,0,0" ToolTip="Friday: 132"/>
                                    <TextBlock Text="Fri" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="11" Foreground="#6B7280"/>
                                </StackPanel>

                                <!-- Day 6 -->
                                <StackPanel Grid.Column="5" VerticalAlignment="Bottom" Margin="5">
                                    <Border Background="#3B82F6" Height="125" CornerRadius="4,4,0,0" ToolTip="Saturday: 125"/>
                                    <TextBlock Text="Sat" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="11" Foreground="#6B7280"/>
                                </StackPanel>

                                <!-- Day 7 (Today) -->
                                <StackPanel Grid.Column="6" VerticalAlignment="Bottom" Margin="5">
                                    <Border Background="#10B981" Height="128" CornerRadius="4,4,0,0" ToolTip="Sunday (Today): 128"/>
                                    <TextBlock Text="Sun" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="11" Foreground="#10B981" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Equipment Compliance -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="Equipment Status" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,20"/>
                            
                            <!-- Safety Helmet -->
                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock Text="ðŸª– Safety Helmet" FontSize="13" Foreground="#374151" FontWeight="SemiBold"/>
                                    <TextBlock Text="95%" FontSize="13" Foreground="#10B981" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </Grid>
                                
                                <Border Grid.Row="1" Background="#E5E7EB" Height="8" CornerRadius="4">
                                    <Border Background="#10B981" Width="380" HorizontalAlignment="Left" CornerRadius="4"/>
                                </Border>
                            </Grid>

                            <!-- Safety Vest -->
                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock Text="ðŸ¦º Safety Vest" FontSize="13" Foreground="#374151" FontWeight="SemiBold"/>
                                    <TextBlock Text="92%" FontSize="13" Foreground="#10B981" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </Grid>
                                
                                <Border Grid.Row="1" Background="#E5E7EB" Height="8" CornerRadius="4">
                                    <Border Background="#10B981" Width="368" HorizontalAlignment="Left" CornerRadius="4"/>
                                </Border>
                            </Grid>

                            <!-- Both Equipment -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock Text="âœ“ Both Equipment" FontSize="13" Foreground="#374151" FontWeight="SemiBold"/>
                                    <TextBlock Text="90%" FontSize="13" Foreground="#10B981" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </Grid>
                                
                                <Border Grid.Row="1" Background="#E5E7EB" Height="8" CornerRadius="4">
                                    <Border Background="#10B981" Width="360" HorizontalAlignment="Left" CornerRadius="4"/>
                                </Border>
                            </Grid>

                            <!-- Alert -->
                            <Border Background="#FEF3C7" CornerRadius="8" Padding="12" Margin="0,25,0,0">
                                <StackPanel>
                                    <TextBlock Text="âš ï¸ Attention Required" FontSize="12" FontWeight="Bold" Foreground="#92400E"/>
                                    <TextBlock Text="13 crew members need to complete their safety equipment." 
                                               FontSize="11" 
                                               Foreground="#78350F" 
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Activity -->
                <Border Style="{StaticResource StatCard}" Margin="10,10,10,20">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <TextBlock Text="Recent Activity" FontSize="18" FontWeight="Bold" Foreground="#111827"/>
                            <TextBlock Text="View All â†’" 
                                       FontSize="13" 
                                       Foreground="#2563EB" 
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Cursor="Hand"/>
                        </Grid>

                        <!-- Activity List -->
                        <StackPanel>
                            <!-- Activity Item 1 -->
                            <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#D1FAE5" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0">
                                        <TextBlock Text="âœ“" FontSize="18" Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="John Smith checked in" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                                        <TextBlock Text="Full compliance â€¢ Helmet &amp; Vest detected" FontSize="12" Foreground="#10B981" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="2 min ago" FontSize="12" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Activity Item 2 -->
                            <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#FEE2E2" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0">
                                        <TextBlock Text="âš " FontSize="18" Foreground="#EF4444" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Sarah Johnson - Equipment Missing" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                                        <TextBlock Text="Safety vest not detected" FontSize="12" Foreground="#EF4444" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="8 min ago" FontSize="12" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Activity Item 3 -->
                            <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#D1FAE5" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0">
                                        <TextBlock Text="âœ“" FontSize="18" Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Mike Davis checked in" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                                        <TextBlock Text="Full compliance â€¢ Helmet &amp; Vest detected" FontSize="12" Foreground="#10B981" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="15 min ago" FontSize="12" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Activity Item 4 -->
                            <Border Padding="0,12,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#D1FAE5" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0">
                                        <TextBlock Text="âœ“" FontSize="18" Foreground="#10B981" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Emily Chen checked in" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                                        <TextBlock Text="Full compliance â€¢ Helmet &amp; Vest detected" FontSize="12" Foreground="#10B981" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="23 min ago" FontSize="12" Foreground="#9CA3AF" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
