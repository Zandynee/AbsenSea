<Page x:Class="AbsenSeaFrontendFix.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AbsenSeaFrontendFix.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="DashboardPage">

    <Page.Resources>
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#3b82f6" Opacity="0.15" BlurRadius="20" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#DBEAFE"/>
                                <Setter Property="Foreground" Value="#2563eb"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#2563eb" Offset="0"/>
                                    <GradientStop Color="#3b82f6" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F9FAFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="30,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock x:Name="ShipInfoText" Text="Ship: MV Ocean Voyager â€¢ ID: SHP-001" FontSize="14" Foreground="#6B7280" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ“Š Dashboard" Style="{StaticResource PrimaryButton}"/>
                    <Button Content="âœ“ Attendance" Style="{StaticResource NavButton}" Click="NavigateToAttendance_Click"/>
                    <Button Content="ðŸ“‹ Reports" Style="{StaticResource NavButton}" Click="NavigateToReports_Click"/>
                    <Button Content="âš™ Settings" Style="{StaticResource NavButton}"/>
                    <Button Content="Logout" Style="{StaticResource NavButton}" Click="Logout_Click" Margin="15,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- Statistics Cards -->
                <WrapPanel Margin="0,10,0,0" Orientation="Horizontal">

                    <!-- Total Crew Card -->
                    <Border Style="{StaticResource StatCard}" MinWidth="250" MaxWidth="350">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="Total Crew Members" FontSize="14" Foreground="#6B7280" FontWeight="Medium"/>
                                <Border CornerRadius="12" Padding="10" HorizontalAlignment="Right">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#2563eb" Offset="0"/>
                                            <GradientStop Color="#3b82f6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="ðŸ‘¥" FontSize="20"/>
                                </Border>
                            </Grid>
                            <TextBlock x:Name="TotalCrewText" Text="142" FontSize="36" FontWeight="Bold" Foreground="#111827" Margin="0,15,0,5"/>
                            <TextBlock x:Name="TotalCrewSubtext" Foreground="#10B981" FontSize="12" FontWeight="SemiBold">
                                <Run Text="â†‘ 12% "/><Run Text="from last month" Foreground="#6B7280"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Checked In Today Card -->
                    <Border Style="{StaticResource StatCard}" MinWidth="250" MaxWidth="350">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="Checked In Today" FontSize="14" Foreground="#6B7280" FontWeight="Medium"/>
                                <Border CornerRadius="12" Padding="10" HorizontalAlignment="Right">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#10b981" Offset="0"/>
                                            <GradientStop Color="#34d399" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="âœ“" FontSize="20" Foreground="White"/>
                                </Border>
                            </Grid>
                            <TextBlock x:Name="CheckedInText" Text="128" FontSize="36" FontWeight="Bold" Foreground="#111827" Margin="0,15,0,5"/>
                            <TextBlock x:Name="AttendanceRateText" Foreground="#6B7280" FontSize="12" FontWeight="SemiBold">
                                <Run Text="90.1% "/><Run Text="attendance rate"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Compliant Card -->
                    <Border Style="{StaticResource StatCard}" MinWidth="250" MaxWidth="350">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="Full Compliance" FontSize="14" Foreground="#6B7280" FontWeight="Medium"/>
                                <Border CornerRadius="12" Padding="10" HorizontalAlignment="Right">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1d4ed8" Offset="0"/>
                                            <GradientStop Color="#60a5fa" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="ðŸ›¡ï¸" FontSize="20"/>
                                </Border>
                            </Grid>
                            <TextBlock x:Name="CompliantText" Text="115" FontSize="36" FontWeight="Bold" Foreground="#111827" Margin="0,15,0,5"/>
                            <TextBlock x:Name="ComplianceRateText" Foreground="#10B981" FontSize="12" FontWeight="SemiBold">
                                <Run Text="89.8% "/><Run Text="with full equipment" Foreground="#6B7280"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Non-Compliant Card -->
                    <Border Style="{StaticResource StatCard}" MinWidth="250" MaxWidth="350">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="Non-Compliant" FontSize="14" Foreground="#6B7280" FontWeight="Medium"/>
                                <Border CornerRadius="12" Padding="10" HorizontalAlignment="Right">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#ef4444" Offset="0"/>
                                            <GradientStop Color="#f87171" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="âš ï¸" FontSize="20"/>
                                </Border>
                            </Grid>
                            <TextBlock x:Name="NonCompliantText" Text="13" FontSize="36" FontWeight="Bold" Foreground="#EF4444" Margin="0,15,0,5"/>
                            <TextBlock x:Name="NonComplianceRateText" Foreground="#EF4444" FontSize="12" FontWeight="SemiBold">
                                <Run Text="10.2% "/><Run Text="missing equipment" Foreground="#6B7280"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </WrapPanel>

                <!-- Charts and Equipment Status -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" MinWidth="400"/>
                        <ColumnDefinition Width="1*" MinWidth="300"/>
                    </Grid.ColumnDefinitions>

                    <!-- Attendance Trend (keeping static for now) -->
                    <Border Grid.Column="0" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="Attendance Trend (Last 7 Days)" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,20"/>
                            <TextBlock Text="ðŸ“Š Chart visualization coming soon..." FontSize="14" Foreground="#6B7280" TextAlignment="Center" Margin="0,40"/>
                        </StackPanel>
                    </Border>

                    <!-- Equipment Status -->
                    <Border Grid.Column="1" Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="Equipment Status" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,20"/>

                            <TextBlock x:Name="EquipmentStatusText" Text="Loading..." FontSize="14" Foreground="#6B7280" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Activity -->
                <Border Style="{StaticResource StatCard}" Margin="10,10,10,20">
                    <StackPanel>
                        <TextBlock Text="Recent Activity" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,20"/>
                        <StackPanel x:Name="RecentActivityPanel">
                            <TextBlock Text="Loading recent activity..." FontSize="14" Foreground="#6B7280"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>