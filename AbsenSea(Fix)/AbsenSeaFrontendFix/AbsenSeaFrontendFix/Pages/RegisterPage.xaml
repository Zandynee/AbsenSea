<Page x:Class="AbsenSeaFrontendFix.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AbsenSeaFrontendFix.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="RegisterPage">

    <Page.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#F3F4F6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="300"/>
            <ColumnDefinition Width="1*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side - Brand Panel -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1e3a8a" Offset="0"/>
                    <GradientStop Color="#3b82f6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel VerticalAlignment="Center" Margin="60">
                <Image Source="/Assets/logo.png" Width="100" Height="100" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Join AbsenSea" FontSize="42" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Register your ship today" FontSize="18" Foreground="#93C5FD" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <StackPanel Margin="0,40,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="✓" FontSize="20" Foreground="#10B981" Margin="0,0,10,0"/>
                        <TextBlock Text="Real-time safety equipment monitoring" FontSize="14" Foreground="#BFDBFE" TextWrapping="Wrap" MaxWidth="280"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="✓" FontSize="20" Foreground="#10B981" Margin="0,0,10,0"/>
                        <TextBlock Text="AI-powered compliance detection" FontSize="14" Foreground="#BFDBFE" TextWrapping="Wrap" MaxWidth="280"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="✓" FontSize="20" Foreground="#10B981" Margin="0,0,10,0"/>
                        <TextBlock Text="Comprehensive attendance reports" FontSize="14" Foreground="#BFDBFE" TextWrapping="Wrap" MaxWidth="280"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Right Side - Register Form -->
        <Border Grid.Column="1" Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel VerticalAlignment="Center" Margin="80,40">
                    <TextBlock Text="Create Account" FontSize="32" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,8"/>
                    <TextBlock Text="Register your ship to get started" FontSize="14" Foreground="#6B7280" Margin="0,0,0,30"/>

                    <!-- Ship Name -->
                    <TextBlock Text="Ship Name" FontSize="13" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                    <TextBox x:Name="ShipNameTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>

                    <!-- Ship ID -->
                    <TextBlock Text="Ship ID" FontSize="13" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                    <TextBox x:Name="ShipIdTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>

                    <!-- Email -->
                    <TextBlock Text="Email Address" FontSize="13" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                    <TextBox x:Name="EmailTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"/>

                    <!-- Password -->
                    <TextBlock Text="Password" FontSize="13" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,20"/>

                    <!-- Confirm Password -->
                    <TextBlock Text="Confirm Password" FontSize="13" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,20"/>

                    <!-- Terms Agreement -->
                    <CheckBox Margin="0,0,0,25">
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="I agree to the " Foreground="#6B7280" FontSize="13"/>
                            <Run Text="Terms of Service" Foreground="#2563EB" FontSize="13" FontWeight="SemiBold" Cursor="Hand"/>
                            <Run Text=" and " Foreground="#6B7280" FontSize="13"/>
                            <Run Text="Privacy Policy" Foreground="#2563EB" FontSize="13" FontWeight="SemiBold" Cursor="Hand"/>
                        </TextBlock>
                    </CheckBox>

                    <!-- Register Button -->
                    <Button Content="Create Account" 
                            Style="{StaticResource ModernButton}"
                            Click="RegisterButton_Click"
                            Margin="0,0,0,20"/>

                    <!-- Login Link -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Already have an account? " FontSize="13" Foreground="#6B7280"/>
                        <TextBlock Text="Sign in" 
                                   FontSize="13" 
                                   Foreground="#2563EB" 
                                   FontWeight="SemiBold"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="LoginLink_Click">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
